<%- include('../layouts/head.ejs', { title: 'DaniÃ«lle - HDate' }) %>

<header class="header">
    <a href="/messages/chat"><i class="fas fa-angle-left"></i></a>
    <h1 class="header__chat-heading"><%= data.firstName %></h1>
    <i class="fas fa-ellipsis-v"></i>
</header>
<main class="container">
    <section class="user-info">
        <img class="user-info__avatar" src="/images/<%=data.avatar%>" alt="Profielfoto gebruiker">
        <h1 class="user-info__name"><%= data.firstName %> <%= data.lastName %></h1>
        <h2 class="user-info__age"><%= data.age %></h2>
        <h2 class="user-info__location"><%= data.location %></h2>
    </section>
    <section class="gallery--profile">
        <h2 class="header__heading gallery__heading">Hobbies</h2>
        <ul class="gallery">
            <% data.hobbies.forEach(function (hobby) { %>
                <li class="gallery-item gallery-item--profile">
                    <img role="presentation" src="/images/<%= hobby.image %>">
                    <h3 title="Hobby"><%= hobby.name %></h3>
                </li>
            <% }) %>
        </ul>
    </section>
</main>

<%- include('../layouts/tail.ejs') %>