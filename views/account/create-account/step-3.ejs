<%- include('../../layouts/head.ejs', { title: 'Profiel instellen - HDate' }) %>

<header class="header">
    <h1 class="header__chat-heading">Stap 3/3: Profiel Opzetten</h1>
</header>
<main class="container">
    <form action="/account/create" method="POST">
        <ul class="hobby-list">
            <% data.forEach(function (hobby) { %>
            <li class="hobby-list__item">
                <input class="hobby-list__checkbox" type="checkbox" id="<%= hobby._id %>" name="hobbies" value="<%= hobby._id %>">
                <label for="<%= hobby._id %>" class="hobby-list__label">
                    <%= hobby.name %>
                </label>
            </li>
            <% }) %>
        </ul>
        <footer class="navigation-footer">
            <a href="/account/create/2" class="navigation-footer__link">
                <i class="fa fa-angle-left"></i>
            </a>
            <p class="text--large text--center">Staat je hobby er niet tussen?
                <a class="text--blue" href="/hobbies/request">Vraag een hobby aan</a>
            </p>
            <button type="submit" class="navigation-footer__link">
                <i class="fa fa-angle-right"></i>
            </button>
        </footer>
    </form>
</main>

<%- include('../../layouts/tail.ejs') %>
