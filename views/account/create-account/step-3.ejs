<%- include('../../layouts/head.ejs', { title: 'Profiel instellen - HDate' }) %>

<header class="header">
    <h1 class="header__chat-heading">Profiel Opzetten</h1>
</header>
<main class="container">
    <form action="/account/create" method="POST">
        <div class="hobby-search">
            <input type="text" class="hobby-search__input" placeholder="Wat doe je graag?" data-hobby-search>
            <label class="hobby-search__label">
                Wat doe je graag?
            </label>
        </div>
        <ul class="hobby-list">
            <% data.forEach(function (hobby) { %>
            <li class="hobby-list__item">
                <input class="hobby-list__checkbox" type="checkbox" id="<%= hobby._id %>" name="hobbies" value="<%= hobby._id %>">
                <label for="<%= hobby._id %>" class="hobby-list__label">
                    <%= hobby.name %>
                </label>
            </li>
            <% }) %>
        </ul>
        <footer class="navigation-footer">
            <a href="/account/create/2" class="navigation-footer__link"><i class="fa fa-angle-left"></i></a>
            <button type="submit" class="navigation-footer__link"><i class="fa fa-angle-right"></i></button>
        </footer>
    </form>
</main>

<%- include('../../layouts/tail.ejs') %>