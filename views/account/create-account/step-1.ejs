<%- include('../../layouts/head.ejs', { title: 'Account aanmaken - HDate' }) %>

<header class="header">
    <a href="/"><i class="fa fa-caret-left"></i> Annuleren</a>
    <h1 class="header__chat-heading">Registreren</h1>
</header>
<main class="container">
    <form action="/account/create/1" method="POST">
        <label class="form-group">
            E-mailadres
            <input autocomplete="email" class="form-group__input" type="email" name="email" required>
        </label>
        <label class="form-group">
            Wachtwoord
            <input autocomplete="new-password" class="form-group__input" minlength="6" type="password" name="password" required>
        </label>
        <button class="submit-button sticky absolute--bottom right-content" type="submit">
            Doorgaan <i class="fa fa-caret-right"></i>
        </button>
    </form>
</main>

<%- include('../../layouts/tail.ejs') %>