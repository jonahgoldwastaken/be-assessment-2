<%- include('../layouts/head.ejs', { title: 'Profiel bewerken - HDate' }) %>

<form action="/account">
    <header class="header">
        <a href="/account">Annuleren</a>
        <h1 class="header__chat-heading">Profiel Bewerken</h1>
        <button type="submit" class="submit-button">Opslaan</button>
    </header>
    <main class="container">
        <label class="form-group--image form-group--image--filled">
            Profielfoto aanpassen
            <input autocomplete="photo" type="file" name="profile-image" accept="image/*">
        </label>
        <fieldset class="fieldset">
            <legend class="fieldset__legend">Jouw gegevens</legend>
            <label class="form-group">
                Voornaam
                <input autocomplete="given-name" class="form-group__input" type="text" name="first_name" value="<%= data.firstName %>" required>
            </label>
            <label class="form-group">
                Achternaam
                <input autocomplete="family-name" class="form-group__input" type="text" name="last_name" value="<%= data.lastName %>" required>
            </label>
            <div class="form-combine">
                <label class="form-group form-group--age">
                    Leeftijd
                    <input class="form-group__input" min="18" value="<%= data.age %>" max="99" type="number" name="age" required>
                </label>
                <label class="form-group form-group--location">
                    Woonplaats
                    <input autocomplete="address-level2" class="form-group__input" type="text" value="<%= data.location %>" name="location">
                </label>
            </div>
        </fieldset>
        <fieldset class="fieldset" required>
            <legend class="fieldset__legend">Je bent een...</legend>
            <div class="form-combine">
                <label class="form-group form-group--checkbox">
                    <input class="form-group__checkbox fa" type="checkbox" name="sex" value="male" <% if (data.sex == 'male') { %> checked <% } %>> Man
                </label>
                <label class="form-group form-group--checkbox">
                    <input class="form-group__checkbox fa" type="checkbox" name="sex" value="female" <% if (data.sex == 'female') { %> checked <% } %>> Vrouw
                </label>
            </div>
        </fieldset>
        <fieldset class="fieldset" required>
            <legend class="fieldset__legend">en valt op...</legend>
            <div class="form-combine">
                <label class="form-group form-group--checkbox">
                    <input class="form-group__checkbox fa" type="checkbox" name="sex_pref" value="male" <% if (data.sexPref == 'male') { %> checked <% } %>>
                    Mannen
                </label>
                <label class="form-group form-group--checkbox">
                    <input class="form-group__checkbox fa" type="checkbox" name="sex_pref" value="female" <% if (data.sexPref == 'female') { %> checked <% } %>>
                    Vrouwen
                </label>
            </div>
        </fieldset>
        <fieldset class="fieldset" required>
            <legend class="fieldset__legend">tussen de...</legend>
            <div class="form-combine">
                <label class="form-group form-group--age form-group--range">
                    Minimale leeftijd
                    <input type="number" class="form-group__input" value="<%= data.ageRange.min %>" max="99" min="18" name="age_min">
                </label>
                <label class="form-group form-group--age form-group--range">
                    Maximale leeftijd
                    <input type="number" class="form-group__input" value="<%= data.ageRange.max %>" max="99" min="18" name="age_max">
                </label>
            </div>
        </fieldset>
        <fieldset class="fieldset">
            <legend class="fieldset__legend fieldset__legend--bb"><a href="/hobbies">Hobbies <i class="fa fa-angle-right"></i></a></legend>
            <ul class="selected-hobbies">
                <li class="selected-hobbies__hobby">Breien <button type="button">X</button></li>
                <li class="selected-hobbies__hobby">Filmen <button type="button">X</button></li>
                <li class="selected-hobbies__hobby">Montage <button type="button">X</button></li>
                <li class="selected-hobbies__hobby">Koken <button type="button">X</button></li>
            </ul>
        </fieldset>
    </main>
</form>

<%- include('../layouts/tail.ejs') %>