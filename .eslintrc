{
    "extends": "eslint:recommended",
    "globals": {
        "window": true,
        "process": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "impliedStrict": true
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "commonjs": true
    },
    "rules": {
        "no-console": [
            "error",
            {
                "allow": ["error"]
            }
        ],
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-var": "error",
        "block-scoped-var": "error",
        "comma-dangle": [
            "error",
            {
                "arrays": "never",
                "objects": "never",
                "imports": "never",
                "exports": "never",
                "functions": "ignore"
            }
        ],
        "curly": ["error", "multi-or-nest", "consistent"],
        "space-before-function-paren": [
            "warn",
            {
                "anonymous": "always",
                "named": "always",
                "asyncArrow": "always"
            }
        ]
    }
}